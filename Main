import exceptions.MothersAngerException;
import locations.Castle;
import locations.CastleRoom;

public class Main {
    public static void main (String[] args) {
        Dress dress = new Dress("старомодным и нелепым");
        Princess princess = new Princess("Принцесса","Красивая", dress);
        Prince prince = new Prince("Королевич", "Милый");
        Maid maid = new Maid("Фрейлина","Отвественная");
        Priest priest = new Priest("Священник", "Строгий");
        Mother mother = new Mother("Мать Королевича", "Злая");

        Castle castle = new Castle();
        CastleRoom diningRoom = new CastleRoom("Обеденный зал");
        ParentsHouse parentsHome = new ParentsHouse();
        HuntersHouse hut = new HuntersHouse();

        diningRoom.addContent("старинные кушанья");
        diningRoom.addContent("красивая музыка");
        diningRoom.addContent("изысканная посуда");

        princess.say();
        prince.admire(princess);
        castle.comeAlive();
        maid.say();
        princess.eatDinner();
        prince.eatDinner();

        priest.marryCouple(prince, princess);
        princess.marry();

        prince.goHome(parentsHome);
        mother.askQuestions(prince);

        try {
            prince.answerMothersQuestions(false);
        } catch (
                MothersAngerException e) {
            System.out.println("Произошла ошибка: " + e.getMessage());
        }

        mother.hasNoClue();

        prince.returnHome();
        priest.hasNoClue();
        maid.hasNoClue();
        princess.hasNoClue();
        prince.hasNoClue();

        princess.birthKids();
        prince.birthKids();
    }
